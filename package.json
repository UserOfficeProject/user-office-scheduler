{
  "name": "user-office-scheduler-backend",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/UserOfficeProject/user-office-scheduler-backend.git"
  },
  "private": true,
  "scripts": {
    "build": "rm -rf ./build && tsc",
    "test": "exit 0",
    "prod": "npm run build && node ./build/index.js",
    "dev": "ts-node-dev --rs --respawn ./src/index.ts",
    "dev:db:up": "docker-compose -f docker-compose.local.yml up -d",
    "dev:db:down": "docker-compose -f docker-compose.local.yml down -v",
    "dev:docker": "npm install && ts-node-dev --rs --respawn ./src/index.ts",
    "lint": "tsc --noEmit && eslint ./src --ext .js,.ts --quiet",
    "lint:all": "tsc --noEmit && eslint ./src --ext .js,.ts",
    "lint:fix": "tsc --noEmit && eslint ./src --ext .js,.ts --fix --quiet",
    "generate:local": "node scripts/generate-graphql-sdk.js"
  },
  "lint-staged": {
    "**/*.{js,ts}": "npm run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "SWAP",
  "license": "ISC",
  "dependencies": {
    "@apollo/subgraph": "^0.4.2",
    "@user-office-software/duo-localisation": "^1.2.0",
    "@user-office-software/duo-logger": "^1.2.0",
    "@user-office-software/duo-message-broker": "^1.3.0",
    "@user-office-software/duo-validation": "^2.4.3",
    "apollo-graphql": "^0.9.6",
    "apollo-server": "^3.6.7",
    "apollo-server-core": "^3.6.7",
    "apollo-server-express": "^3.6.7",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^8.6.0",
    "express": "^4.18.0",
    "express-jwt": "^6.1.2",
    "graphql": "^15.8.0",
    "graphql-request": "^3.7.0",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.95.14",
    "luxon": "^2.3.2",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "^2.4.2",
    "@graphql-codegen/typescript-graphql-request": "^4.3.7",
    "@graphql-codegen/typescript-operations": "^2.2.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/express-jwt": "0.0.42",
    "@types/jest": "^27.0.3",
    "@types/luxon": "^2.0.8",
    "@types/validator": "^13.7.0",
    "@types/yup": "^0.29.13",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^4.3.8",
    "jest": "^27.4.5",
    "lint-staged": "^10.5.4",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
